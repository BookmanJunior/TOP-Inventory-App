extends layout

block content
  h1.title #{title}
  form(method="post")
    label(for="genre_name") Genre:  
    input(type="text", name="genre_name" id="genre_name" value=(genre === undefined ? "" : genre.name) required)
    button(type="submit") Submit  
  if (errors) 
    ul.errors
      for error in errors
        li.error-msg #{error.msg}

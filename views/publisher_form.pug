extends layout

block content
  h1.title #{title}
  form(method="post")
    label(for="publisher_name") Publisher:  
    input(type="text", name="publisher_name" id="publisher_name" value=(publisher === undefined ? "" : publisher.name))
    button(type="submit") Submit  
  if (errors) 
    ul.errors
      for error in errors
        li.error-msg #{error.msg}

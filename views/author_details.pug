extends layout

block content
  h1 #{author.name}
  if games.length
    ul.author-games
      for game in games
        li
          a(href=game.url) #{game.title}
  else
    h2 No games listed by this author.
  hr
  br
  p
    form(action=author.url+"/delete", method="post") 
      input(type="hidden", name="author_id" value=author._id)
      button(type="submit") Delete Author
  if error
    p #{error}
  a(href=author.url+"/update") Update Author 
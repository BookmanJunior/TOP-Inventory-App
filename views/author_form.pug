extends layout

block content
  h1.title #{title}
  form(method="post")
    label(for="author_name") Author:  
    input(type="text", name="author_name" id="author_name" value=(author === undefined ? "" : author.name) required)
    button(type="submit") Submit  
  if (errors) 
    ul.errors
      for error in errors
        li.error-msg #{error.msg}

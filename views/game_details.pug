extends layout

block content
  h1 #{game.title}
    h2.about-game About this game
      hr
      p.about-game-text #{game.description}
      p.game-price Price: $#{game.price}
    h2 Game Details
      hr
      ul.game-details
        li.game-genres Genres: 
          for genre in game.genres
            span.game-genre #{genre.name} 
        li.game-author Author: #{game.author.name}
        li.game-publishers Publisher: 
          for publisher in game.publisher
            span.game-publisher #{publisher.name} 
  